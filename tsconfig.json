{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "rootDir": "src",
    "types": ["node"],
    "lib": ["es2022"],
    "incremental": true,
    "composite": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "./src/**/*.d.ts",
    "./src/**/scratch*.ts",
    "node_modules",
    ".history",
    ".git",
    ".github",
    ".mastra",
    "<node_internals>/**"
  ]
}
